<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ukiuni.slitec" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Slite</name>
    <description>
        A collaboration tool.
    </description>
    <author email="ukiuni@gmail.com" href="https://slite.ukiuni.com">
        ukiuni
    </author>
    <content src="index.html" />
    <!--<content src="https://slite.ukiuni.com" />-->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access origin="https://slite.ukiuni.com" subdomains="true"/> 
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
